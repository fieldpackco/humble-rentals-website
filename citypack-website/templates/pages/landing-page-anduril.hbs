<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{meta.title}}</title>
    <meta name="description" content="{{meta.description}}">

    <!-- Anduril-style CSS -->
    <link rel="stylesheet" href="/css/anduril-style.css">
    <!-- Grid System CSS -->
    <link rel="stylesheet" href="/css/grid-system.css">
</head>
<body>

    {{> nav-anduril}}

    <!-- Full Width Hero Section -->
    <section class="hero-full">
        <div class="hero-video-container">
            <!-- Video/Image background - placeholder for now -->
            <img src="/images/hero-placeholder.jpg" alt="{{hero.title}}">
        </div>
        <div class="hero-overlay"></div>
        <div class="hero-content">
            {{#if hero.category}}
            <div class="article-date">{{hero.category}}</div>
            {{/if}}
            <h1 class="hero-title">{{hero.title}}</h1>
            <p class="hero-subtitle">{{hero.description}}</p>
            <div class="cta-buttons" style="margin-top: 32px;">
                <a href="{{hero.cta.primary.href}}" class="btn btn-primary">{{hero.cta.primary.text}}</a>
                <a href="{{hero.cta.secondary.href}}" class="btn btn-secondary">{{hero.cta.secondary.text}}</a>
            </div>
        </div>
    </section>

    <!-- Products Grid - Exact Anduril 7-Card Layout -->
    <section class="products-grid-section">
        <div class="grid-container">
            <!-- ROW 1: Three equal squares -->
            <div class="grid-card grid-1x1" data-placeholder="1">
                <div class="grid-card-image"></div>
                <div class="grid-card-overlay"></div>
                <div class="grid-card-content">
                    <h3 class="grid-card-title">Public Works</h3>
                </div>
            </div>

            <div class="grid-card grid-1x1" data-placeholder="2">
                <div class="grid-card-image"></div>
                <div class="grid-card-overlay"></div>
                <div class="grid-card-content">
                    <h3 class="grid-card-title">Farmers Markets</h3>
                </div>
            </div>

            <div class="grid-card grid-1x1" data-placeholder="3">
                <div class="grid-card-image"></div>
                <div class="grid-card-overlay"></div>
                <div class="grid-card-content">
                    <h3 class="grid-card-title">City Events</h3>
                </div>
            </div>

            <!-- ROW 2: Tall left (1x2) -->
            <div class="grid-card grid-1x2" data-placeholder="4">
                <div class="grid-card-image"></div>
                <div class="grid-card-overlay"></div>
                <div class="grid-card-content">
                    <h3 class="grid-card-title">Fleet Management</h3>
                    <p class="grid-card-subtitle">End-to-end deployment</p>
                </div>
            </div>

            <!-- ROW 2: Wide center (2x1) -->
            <div class="grid-card grid-2x1" data-placeholder="5">
                <div class="grid-card-image"></div>
                <div class="grid-card-overlay"></div>
                <div class="grid-card-content">
                    <h3 class="grid-card-title">Power Analytics</h3>
                    <p class="grid-card-subtitle">Real-time usage tracking</p>
                </div>
            </div>

            <!-- ROW 3: Right bottom -->
            <div class="grid-card grid-1x1" data-placeholder="6">
                <div class="grid-card-image"></div>
                <div class="grid-card-overlay"></div>
                <div class="grid-card-content">
                    <h3 class="grid-card-title">Emergency Backup</h3>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="feature-full">
        <div class="feature-split">
            <div class="feature-image">
                <img src="/images/cta-placeholder.jpg" alt="Get Started with Citypack">
            </div>
            <div class="feature-content">
                <h2>Ready to Transform Your City's Power Infrastructure?</h2>
                <p>Join forward-thinking California cities deploying clean, quiet power solutions for public events and municipal operations.</p>
                <div class="cta-buttons">
                    <a href="/contact" class="btn btn-primary">Schedule a Consultation</a>
                    <a href="/resources" class="btn btn-secondary">Download Resources</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="anduril-footer">
        <div class="anduril-container">
            <div class="anduril-footer-content">
                <div class="anduril-footer-brand">
                    <div class="anduril-footer-logo">HUMBLE</div>
                </div>
                <div class="anduril-footer-links">
                    <div class="anduril-footer-column">
                        <h4>Company</h4>
                        <ul>
                            <li><a href="/about">About</a></li>
                            <li><a href="/contact">Contact</a></li>
                        </ul>
                    </div>
                    <div class="anduril-footer-column">
                        <h4>Product</h4>
                        <ul>
                            <li><a href="/specifications">Specifications</a></li>
                            <li><a href="/rental">Rental</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="anduril-footer-bottom">
                <p>COPYRIGHT Â© 2025 HUMBLE RENTALS, LLC</p>
            </div>
        </div>
    </footer>

</body>
</html>
