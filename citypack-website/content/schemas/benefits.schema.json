{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["title", "items"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 6,
      "items": {
        "type": "object",
        "required": ["icon", "title", "description"],
        "properties": {
          "icon": { "type": "string" },
          "title": {
            "type": "string",
            "minLength": 5,
            "maxLength": 80
          },
          "description": {
            "type": "string",
            "minLength": 20,
            "maxLength": 300
          }
        }
      }
    }
  }
}
