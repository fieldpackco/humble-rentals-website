<section class="specs">
    <h2>{{title}}</h2>
    <div class="specs-grid">
        {{#each specs}}
        <div class="spec-card">
            <h3>{{label}}</h3>
            <div class="spec-value">{{value}}</div>
            <p>{{description}}</p>
        </div>
        {{/each}}
    </div>
</section>
